<p id="notice"><%= notice %></p>

<h1>帳戶</h1>

<table>
  <thead>
    <tr>
      <th>帳戶</th>
      <th>電郵</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.userid %></td>
        <td><%= user.email %></td>
        
        <td><%= link_to '顯示', user %></td>
        <td><%= link_to '編輯', edit_user_path(user) %></td>
        <td><%= link_to '刪除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

